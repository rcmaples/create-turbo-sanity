{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "ci",
        "build",
        "revert"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "template",
        "cli",
        "deps",
        "docs",
        "ci",
        "config",
        "release"
      ]
    ],
    "subject-min-length": [1, "always", 5],
    "subject-max-length": [2, "always", 72],
    "subject-case": [1, "always", "lower-case"],
    "header-max-length": [2, "always", 100]
  }
}
